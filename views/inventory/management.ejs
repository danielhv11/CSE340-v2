<% if (title) { %>
  <h1><%= title %></h1>
  <% } else {
      res.redirect('/')
  } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
      <% errors.array().forEach(error => {%>
      <li><%= error.msg %></li>
      <% }) %>
  </ul>
  <% } %>

<div class="links">
  <p><a href="/inv/add-classification">Add new Classification</a></p>
  <p><a href="/inv/add-inventory">Add new Vehicle</a></p>
</div>

<h2>Manage Inventory</h2>
<p>Select a classification to see the vehicles with that classification</p>
<label>Classification: <%- classificationSelect %></label>
<table id="inventoryDisplay"></table>

<noscript>Javascript must be enabled to use this page.</noscript>
<script src="../../js/inventory.js"></script>