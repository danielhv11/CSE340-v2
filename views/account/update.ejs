<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
<ul class="notice">
    <% errors.array().forEach(error => {%>
    <li><%= error.msg %></li>
    <% }) %>
</ul>
<% } %>
<div id="forms">
<section>
    <h2>Update Account Information</h2>
    <form action="/account/update" method="post">
        <p>All fields are required</p>
        <fieldset>
            <label>First name<input type="text" id="account_firstname" name="account_firstname" required value="<%= locals.account_firstname %>"></label>
            <label>Last name<input type="text" id="account_lastname" name="account_lastname"required value="<%= locals.account_lastname %>"></label>
            <label>Email address<input type="email" id="account_email" name="account_email"required value="<%= locals.account_email %>"></label>
            <input type="hidden" name="account_id" value="<%= locals.account_id %>">
            <input type="submit" value="Update" id="updateBtn">    
        </fieldset>
    </form>
    </section>
<section>
    <h2>Change Password</h2>
    <form action="/account/update-password" method="post">
        <fieldset>
            <label title="12 or more characters, at least one each of: capital letter, number, and special character">
                Password<input type="password" id="account_password" name="account_password" required 
                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.\s).{12,}$"></label>
                <input type="submit" value="Change Password" id="cPassBtn">
        </fieldset>
        <p>Password requirements:</p>
        <ul>
            <li>Minimum 12 characters length</li>
            <li>At least 1 capital letter</li>
            <li>At least 1 number</li>
            <li>At least 1 special character</li>
        </ul>
    </form>
</section>
</div>