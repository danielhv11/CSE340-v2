<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => {%>
        <li><%= error.msg %></li>
        <% }) %>
    </ul>
    <% } %>

    <h2>Welcome <%- locals.accountData.account_firstname %></h2>
    <p><a href="/account/update" title="Click to update your account information">Update Account Information</a></p>
    <p><a href="/order/my-orders" title="Click to view your orders">My Orders</a></p>
    <% if((locals.accountData.account_type == 'Employee') || (locals.accountData.account_type == 'Admin')) { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv" title="Click to go to the inventory manager">Manage Inventory</a></p>
    <h3>Order Management</h3>
    <p><a href="/order" title="Click to go to the order manager">Manage Orders</a></p>
    <% } %>